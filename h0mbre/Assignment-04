#include <stdio.h>
#include <math.h>

#define PI 3.14

int main(void) 
{
    float radius_input, area_of_circle;
    
    printf("Enter the radius of your circle: ");
    scanf("%f", &radius_input);
    
    area_of_circle = PI*pow(radius_input, 2);
    
    printf("\nThe area of your circle is: %f\n", area_of_circle);
    
    return 0;    
}
